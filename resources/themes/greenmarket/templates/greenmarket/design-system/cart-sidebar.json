{
  "designSystem": {
    "name": "NATURO Cart Sidebar Design System",
    "version": "1.0.0",
    "description": "Design system for NATURO shopping cart sidebar/drawer component",
    
    "colors": {
      "primary": {
        "darkGreen": "#0D3B2E",
        "green": "#2D5F3F",
        "brightGreen": "#7ED321",
        "neonGreen": "#39FF14"
      },
      "accent": {
        "orange": "#FF6B35",
        "red": "#FF4444"
      },
      "neutral": {
        "white": "#FFFFFF",
        "offWhite": "#F8F8F8",
        "lightGray": "#E9E9E9",
        "gray": "#CCCCCC",
        "darkGray": "#666666",
        "black": "#000000"
      },
      "background": {
        "overlay": "rgba(0, 0, 0, 0.5)",
        "sidebar": "#FFFFFF",
        "header": "#FFFFFF",
        "footer": "#F8F8F8",
        "itemCard": "#FFFFFF"
      },
      "text": {
        "primary": "#000000",
        "secondary": "#666666",
        "tertiary": "#999999",
        "price": "#000000",
        "link": "#2D5F3F",
        "error": "#FF0000"
      },
      "ui": {
        "border": "#E0E0E0",
        "divider": "#ECECEC",
        "hover": "#F5F5F5",
        "buttonPrimary": "#7ED321",
        "buttonPrimaryHover": "#6BC015",
        "buttonSecondary": "#FFFFFF",
        "deleteIcon": "#FF4444",
        "deleteIconHover": "#FF0000"
      }
    },

    "typography": {
      "fontFamily": {
        "primary": "'Hind Siliguri', 'Noto Sans Bengali', 'Inter', sans-serif",
        "secondary": "'Inter', 'Segoe UI', sans-serif",
        "bangla": "'Hind Siliguri', 'Noto Sans Bengali', sans-serif"
      },
      "fontSize": {
        "xs": "0.625rem",
        "sm": "0.75rem",
        "base": "0.875rem",
        "md": "1rem",
        "lg": "1.125rem",
        "xl": "1.25rem",
        "2xl": "1.5rem"
      },
      "fontWeight": {
        "regular": 400,
        "medium": 500,
        "semibold": 600,
        "bold": 700,
        "extrabold": 800
      },
      "lineHeight": {
        "tight": 1.25,
        "normal": 1.5,
        "relaxed": 1.75
      }
    },

    "spacing": {
      "0": "0",
      "1": "0.25rem",
      "2": "0.5rem",
      "3": "0.75rem",
      "4": "1rem",
      "5": "1.25rem",
      "6": "1.5rem",
      "8": "2rem",
      "10": "2.5rem",
      "12": "3rem"
    },

    "layout": {
      "sidebar": {
        "width": {
          "mobile": "100%",
          "tablet": "420px",
          "desktop": "450px"
        },
        "maxWidth": "450px",
        "height": "100vh",
        "position": "fixed",
        "top": 0,
        "right": 0,
        "zIndex": 9999
      },
      "overlay": {
        "position": "fixed",
        "top": 0,
        "left": 0,
        "width": "100vw",
        "height": "100vh",
        "zIndex": 9998
      }
    },

    "components": {
      "cartSidebar": {
        "structure": {
          "container": {
            "width": "100%",
            "height": "100vh",
            "background": "#FFFFFF",
            "display": "flex",
            "flexDirection": "column",
            "boxShadow": "-4px 0 20px rgba(0, 0, 0, 0.15)",
            "position": "relative"
          },
          "animation": {
            "enter": "slideInRight 0.3s ease-out",
            "exit": "slideOutRight 0.3s ease-in"
          }
        }
      },

      "cartHeader": {
        "structure": {
          "container": {
            "padding": "1.25rem 1.5rem",
            "borderBottom": "1px solid #E0E0E0",
            "background": "#FFFFFF",
            "display": "flex",
            "justifyContent": "space-between",
            "alignItems": "center",
            "position": "sticky",
            "top": 0,
            "zIndex": 10
          },
          "title": {
            "fontSize": "1.25rem",
            "fontWeight": 700,
            "color": "#000000",
            "margin": 0
          },
          "closeButton": {
            "width": "32px",
            "height": "32px",
            "borderRadius": "50%",
            "background": "transparent",
            "border": "none",
            "cursor": "pointer",
            "display": "flex",
            "alignItems": "center",
            "justifyContent": "center",
            "transition": "all 0.3s ease",
            "color": "#666666",
            "hover": {
              "background": "#F5F5F5",
              "color": "#000000"
            }
          },
          "icon": {
            "size": "1.25rem"
          }
        }
      },

      "cartContent": {
        "structure": {
          "container": {
            "flex": 1,
            "overflowY": "auto",
            "overflowX": "hidden",
            "padding": "1rem 1.5rem",
            "background": "#FFFFFF"
          },
          "scrollbar": {
            "width": "6px",
            "track": {
              "background": "#F5F5F5"
            },
            "thumb": {
              "background": "#CCCCCC",
              "borderRadius": "3px",
              "hover": {
                "background": "#999999"
              }
            }
          }
        }
      },

      "cartItem": {
        "structure": {
          "container": {
            "display": "flex",
            "gap": "1rem",
            "padding": "1rem 0",
            "borderBottom": "1px solid #F0F0F0",
            "position": "relative"
          },
          "imageContainer": {
            "width": "80px",
            "height": "80px",
            "flexShrink": 0,
            "background": "#F8F8F8",
            "borderRadius": "6px",
            "border": "1px solid #E0E0E0",
            "display": "flex",
            "alignItems": "center",
            "justifyContent": "center",
            "padding": "0.5rem"
          },
          "image": {
            "width": "100%",
            "height": "100%",
            "objectFit": "contain"
          },
          "details": {
            "flex": 1,
            "display": "flex",
            "flexDirection": "column",
            "gap": "0.5rem",
            "minWidth": 0
          },
          "title": {
            "fontSize": "0.875rem",
            "fontWeight": 500,
            "color": "#000000",
            "lineHeight": 1.4,
            "margin": 0,
            "display": "-webkit-box",
            "WebkitLineClamp": 2,
            "WebkitBoxOrient": "vertical",
            "overflow": "hidden",
            "textOverflow": "ellipsis"
          },
          "priceRow": {
            "display": "flex",
            "justifyContent": "space-between",
            "alignItems": "center",
            "marginTop": "auto"
          },
          "quantityControl": {
            "display": "flex",
            "alignItems": "center",
            "gap": "0.5rem",
            "background": "#F8F8F8",
            "borderRadius": "4px",
            "padding": "0.25rem"
          },
          "quantityButton": {
            "width": "24px",
            "height": "24px",
            "border": "none",
            "borderRadius": "3px",
            "background": "#FFFFFF",
            "color": "#000000",
            "fontSize": "1rem",
            "cursor": "pointer",
            "display": "flex",
            "alignItems": "center",
            "justifyContent": "center",
            "transition": "all 0.3s ease",
            "hover": {
              "background": "#E0E0E0"
            },
            "disabled": {
              "opacity": 0.5,
              "cursor": "not-allowed"
            }
          },
          "quantityDisplay": {
            "fontSize": "0.875rem",
            "fontWeight": 600,
            "color": "#000000",
            "minWidth": "20px",
            "textAlign": "center"
          },
          "price": {
            "fontSize": "1rem",
            "fontWeight": 700,
            "color": "#000000"
          },
          "deleteButton": {
            "position": "absolute",
            "top": "1rem",
            "right": "0",
            "width": "28px",
            "height": "28px",
            "border": "none",
            "borderRadius": "50%",
            "background": "transparent",
            "color": "#999999",
            "cursor": "pointer",
            "display": "flex",
            "alignItems": "center",
            "justifyContent": "center",
            "transition": "all 0.3s ease",
            "hover": {
              "background": "#FFF0F0",
              "color": "#FF4444"
            }
          }
        }
      },

      "crossSell": {
        "structure": {
          "container": {
            "marginTop": "1.5rem",
            "paddingTop": "1.5rem",
            "borderTop": "2px solid #F0F0F0"
          },
          "header": {
            "display": "flex",
            "justifyContent": "space-between",
            "alignItems": "center",
            "marginBottom": "1rem"
          },
          "title": {
            "fontSize": "1rem",
            "fontWeight": 700,
            "color": "#000000",
            "margin": 0
          },
          "navigation": {
            "display": "flex",
            "gap": "0.5rem"
          },
          "navButton": {
            "width": "28px",
            "height": "28px",
            "border": "1px solid #E0E0E0",
            "borderRadius": "50%",
            "background": "#FFFFFF",
            "cursor": "pointer",
            "display": "flex",
            "alignItems": "center",
            "justifyContent": "center",
            "transition": "all 0.3s ease",
            "hover": {
              "background": "#F5F5F5",
              "borderColor": "#CCCCCC"
            }
          },
          "productGrid": {
            "display": "grid",
            "gridTemplateColumns": "repeat(2, 1fr)",
            "gap": "0.75rem"
          },
          "productCard": {
            "background": "#F8F8F8",
            "borderRadius": "6px",
            "padding": "0.75rem",
            "cursor": "pointer",
            "transition": "all 0.3s ease",
            "hover": {
              "background": "#F0F0F0",
              "transform": "translateY(-2px)"
            }
          },
          "productImage": {
            "width": "100%",
            "aspectRatio": "1/1",
            "background": "#FFFFFF",
            "borderRadius": "4px",
            "marginBottom": "0.5rem",
            "display": "flex",
            "alignItems": "center",
            "justifyContent": "center",
            "padding": "0.5rem"
          },
          "productTitle": {
            "fontSize": "0.75rem",
            "fontWeight": 500,
            "color": "#000000",
            "lineHeight": 1.3,
            "marginBottom": "0.25rem",
            "display": "-webkit-box",
            "WebkitLineClamp": 2,
            "WebkitBoxOrient": "vertical",
            "overflow": "hidden"
          },
          "productPrice": {
            "fontSize": "0.875rem",
            "fontWeight": 700,
            "color": "#000000"
          },
          "productOriginalPrice": {
            "fontSize": "0.75rem",
            "fontWeight": 400,
            "color": "#999999",
            "textDecoration": "line-through",
            "marginLeft": "0.25rem"
          },
          "actions": {
            "display": "flex",
            "gap": "0.5rem",
            "marginTop": "0.5rem"
          },
          "actionButton": {
            "flex": 1,
            "padding": "0.375rem",
            "border": "1px solid #E0E0E0",
            "borderRadius": "4px",
            "background": "#FFFFFF",
            "cursor": "pointer",
            "display": "flex",
            "alignItems": "center",
            "justifyContent": "center",
            "transition": "all 0.3s ease",
            "hover": {
              "background": "#7ED321",
              "borderColor": "#7ED321",
              "color": "#FFFFFF"
            }
          }
        }
      },

      "cartFooter": {
        "structure": {
          "container": {
            "padding": "1.5rem",
            "borderTop": "2px solid #E0E0E0",
            "background": "#F8F8F8",
            "position": "sticky",
            "bottom": 0,
            "zIndex": 10
          },
          "summary": {
            "display": "flex",
            "flexDirection": "column",
            "gap": "0.75rem",
            "marginBottom": "1rem"
          },
          "summaryRow": {
            "display": "flex",
            "justifyContent": "space-between",
            "alignItems": "center"
          },
          "label": {
            "fontSize": "0.875rem",
            "fontWeight": 500,
            "color": "#666666"
          },
          "value": {
            "fontSize": "0.875rem",
            "fontWeight": 600,
            "color": "#000000"
          },
          "total": {
            "paddingTop": "0.75rem",
            "borderTop": "1px solid #E0E0E0",
            "display": "flex",
            "justifyContent": "space-between",
            "alignItems": "center"
          },
          "totalLabel": {
            "fontSize": "1rem",
            "fontWeight": 700,
            "color": "#000000"
          },
          "totalValue": {
            "fontSize": "1.25rem",
            "fontWeight": 800,
            "color": "#000000"
          },
          "checkoutButton": {
            "width": "100%",
            "padding": "1rem",
            "background": "#7ED321",
            "color": "#FFFFFF",
            "border": "none",
            "borderRadius": "6px",
            "fontSize": "1rem",
            "fontWeight": 700,
            "cursor": "pointer",
            "transition": "all 0.3s ease",
            "marginTop": "1rem",
            "hover": {
              "background": "#6BC015",
              "transform": "translateY(-2px)",
              "boxShadow": "0 4px 12px rgba(126, 211, 33, 0.3)"
            },
            "disabled": {
              "background": "#CCCCCC",
              "cursor": "not-allowed",
              "transform": "none"
            }
          }
        }
      },

      "emptyCart": {
        "structure": {
          "container": {
            "display": "flex",
            "flexDirection": "column",
            "alignItems": "center",
            "justifyContent": "center",
            "padding": "3rem 2rem",
            "textAlign": "center",
            "height": "100%"
          },
          "icon": {
            "fontSize": "4rem",
            "color": "#CCCCCC",
            "marginBottom": "1rem"
          },
          "title": {
            "fontSize": "1.25rem",
            "fontWeight": 700,
            "color": "#000000",
            "marginBottom": "0.5rem"
          },
          "message": {
            "fontSize": "0.875rem",
            "color": "#666666",
            "marginBottom": "2rem",
            "lineHeight": 1.6
          },
          "button": {
            "padding": "0.75rem 2rem",
            "background": "#7ED321",
            "color": "#FFFFFF",
            "border": "none",
            "borderRadius": "6px",
            "fontSize": "0.875rem",
            "fontWeight": 600,
            "cursor": "pointer",
            "transition": "all 0.3s ease",
            "hover": {
              "background": "#6BC015",
              "transform": "translateY(-2px)"
            }
          }
        }
      }
    },

    "effects": {
      "shadows": {
        "sidebar": "-4px 0 20px rgba(0, 0, 0, 0.15)",
        "button": "0 4px 12px rgba(126, 211, 33, 0.3)",
        "card": "0 2px 8px rgba(0, 0, 0, 0.08)"
      },
      "transitions": {
        "fast": "0.15s ease",
        "base": "0.3s ease",
        "slow": "0.5s ease"
      },
      "animations": {
        "slideInRight": {
          "from": "transform: translateX(100%)",
          "to": "transform: translateX(0)",
          "duration": "0.3s",
          "easing": "ease-out"
        },
        "slideOutRight": {
          "from": "transform: translateX(0)",
          "to": "transform: translateX(100%)",
          "duration": "0.3s",
          "easing": "ease-in"
        },
        "fadeIn": {
          "from": "opacity: 0",
          "to": "opacity: 1",
          "duration": "0.3s",
          "easing": "ease"
        },
        "fadeOut": {
          "from": "opacity: 1",
          "to": "opacity: 0",
          "duration": "0.3s",
          "easing": "ease"
        }
      }
    },

    "icons": {
      "size": {
        "xs": "0.875rem",
        "sm": "1rem",
        "base": "1.25rem",
        "lg": "1.5rem",
        "xl": "2rem"
      },
      "common": [
        "x",
        "shopping-cart",
        "trash-2",
        "plus",
        "minus",
        "eye",
        "heart",
        "chevron-left",
        "chevron-right"
      ]
    },

    "localization": {
      "languages": ["Bengali", "English"],
      "currency": {
        "symbol": "৳",
        "position": "prefix",
        "format": "৳1,800"
      },
      "text": {
        "cartTitle": {
          "bn": "আপনার কার্ট",
          "en": "Your Cart"
        },
        "continueShopping": {
          "bn": "শপিং চালিয়ে যান",
          "en": "Continue Shopping"
        },
        "checkout": {
          "bn": "চেকআউট করুন",
          "en": "Proceed to Checkout"
        },
        "emptyCart": {
          "bn": "আপনার কার্ট খালি",
          "en": "Your cart is empty"
        },
        "total": {
          "bn": "সর্বমোট",
          "en": "Total"
        },
        "youllAlsoLove": {
          "bn": "আপনিও পছন্দ করবেন",
          "en": "You'll also love"
        }
      }
    },

    "responsive": {
      "mobile": {
        "sidebarWidth": "100%",
        "padding": "1rem",
        "fontSize": "0.875rem"
      },
      "tablet": {
        "sidebarWidth": "420px",
        "padding": "1.25rem",
        "fontSize": "1rem"
      },
      "desktop": {
        "sidebarWidth": "450px",
        "padding": "1.5rem",
        "fontSize": "1rem"
      }
    },

    "accessibility": {
      "focusVisible": {
        "outline": "2px solid #7ED321",
        "outlineOffset": "2px"
      },
      "ariaLabels": {
        "closeCart": "Close cart",
        "removeItem": "Remove item from cart",
        "increaseQuantity": "Increase quantity",
        "decreaseQuantity": "Decrease quantity"
      },
      "keyboard": {
        "escapeToClose": true,
        "tabNavigation": true
      }
    },

    "states": {
      "loading": {
        "opacity": 0.6,
        "cursor": "wait"
      },
      "disabled": {
        "opacity": 0.5,
        "cursor": "not-allowed"
      },
      "error": {
        "borderColor": "#FF0000",
        "color": "#FF0000"
      }
    },

    "interactions": {
      "overlay": {
        "onClick": "closeCart",
        "cursor": "pointer"
      },
      "cartItem": {
        "quantityChange": "updateQuantity",
        "delete": "removeItem"
      },
      "crossSell": {
        "addToCart": "addItemToCart",
        "quickView": "openQuickView"
      }
    }
  }
}
